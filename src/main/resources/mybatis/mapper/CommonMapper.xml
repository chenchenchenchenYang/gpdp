<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yh.mfox.gpdp.mapper.CommenMapper">
    <select id="querySp" resultType="java.util.Map">
        select *
        from "GP_SZZF_W"."SP"
        <where>
            <if test="yj != null and yj != ''">
                AND SPLX = #{yj}
            </if>
            <if test="ej != null and ej != ''">
                AND EJFL = #{ej}
            </if>
            <if test="sj != null and sj != ''">
                AND SJFL = #{sj}
            </if>
        </where>
        limit #{page},#{size}
    </select>
    <select id="querySpCount" resultType="java.lang.Long">
        select count(*)
        from "GP_SZZF_W"."SP"
        <where>
            <if test="yj != null and yj != ''">
                AND SPLX = #{yj}
            </if>
            <if test="ej != null and ej != ''">
                AND EJFL = #{ej}
            </if>
            <if test="sj != null and sj != ''">
                AND SJFL = #{sj}
            </if>
        </where>
    </select>
</mapper>